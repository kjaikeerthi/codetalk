%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :username
    %br/  
    = f.text_field :username, :value => session[:git_login]
  %p
    = f.label :email
    %br/
    = f.email_field :email, :value => session[:git_email]
  %p
    = f.label :password
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %p
    = f.hidden_field :github_login, :value => session[:git_login]
    = f.hidden_field :github_token, :value => session[:git_email]
  %p= f.submit "Sign up"
= render :partial => "devise/shared/links"
